<h1><%= @public_page.name %></h1>
<div class="row">
  <div>
    <%= form_for(@public_page) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.hidden_field :name %>

      <%= f.cktext_area :content, rows: 50 %>
      <br>
      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>