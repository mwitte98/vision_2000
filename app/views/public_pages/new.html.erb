<div class="row">
  <div class="col-lg-offset-3 col-sm-6 col-md-6">
    <%= form_for(@public_page) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.submit "Create page", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>